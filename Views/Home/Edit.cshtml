@model Product
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data"> <!--enctype ile formdan datalarda file olarak eklenen datalarda alınabilir-->
   <div asp-validation-summary="All" ></div> <!--Bütün proppertyler için hatalar  yukarıya özetlenmiş olarak çıkar-->
   <input type="hidden" asp-for="ProductId">
    <div class="mb-3">
        <!-- <label for="Name" class="form-label" >Name</label> -->
        <!-- <input type="text" name="Name" id="Name" class="form-control" > Bunu tag helper ile aşağıdaki gibi yazabiliriz. -->
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" >

        <span asp-validation-for="Name"></span> <!--Bir property için validation hatası eklenebilir-->

    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" >
    </div>

    <div class="input-group mb-3"> <!--Resim ekleme için kullanılan alan--> 
        <input type="file" name="imageFile" id="imageFile" class="form-control">
    </div>
    
    <div>
        <img src="~/img/@Model.Image" alt="" style="width: 100px;" >
        <input type="hidden" asp-for="@Model.Image">
    </div>
